---
interface Props {
  icon: string
  title: string
  class?: string
}

const { icon, title, class: className } = Astro.props
---

<!-- Game Breadcrumb -->
<div class={`px-6 py-4 border-b border-slate-700/50 ${className || ''}`}>
  <div class="max-w-7xl mx-auto">
    <div class="flex items-center space-x-3">
      <div class="text-cyan-400 text-sm">{icon} {title}</div>
    </div>
  </div>
</div>
