---
import { cn } from '@/lib/utils'
import Button from './Button.astro'
import type { HTMLAttributes } from 'astro/types'

export interface Props extends HTMLAttributes<'section'> {
  title: string
  subtitle?: string
  description: string
  primaryAction?: string | null
  secondaryAction?: string | null
  primaryHref?: string
  secondaryHref?: string
  class?: string
}

const {
  title,
  subtitle,
  description,
  primaryAction = 'Login to Play',
  secondaryAction = 'Learn More',
  primaryHref = '/login',
  secondaryHref = '#',
  class: className = '',
  ...props
} = Astro.props

const classes = cn('relative z-10 px-6 py-16', className)
---

<section class={classes} {...props}>
  <div class="max-w-6xl mx-auto text-center">
    <h2
      class="text-6xl md:text-8xl font-orbitron font-black mb-6 text-holographic animate-pulse"
    >
      {title}
    </h2>
    {
      subtitle && (
        <h3 class="text-2xl md:text-4xl font-orbitron font-bold mb-8 text-neon-cyan">
          {subtitle}
        </h3>
      )
    }
    <p
      class="text-xl text-gray-300 mb-12 max-w-3xl mx-auto leading-relaxed"
      set:html={description}
    />
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      {
        primaryAction && (
          <a
            href={primaryHref}
            class="inline-flex items-center justify-center h-11 rounded-md px-8 bg-gradient-to-r from-cyan-500 to-purple-600 text-white shadow-lg shadow-purple-500/25 hover:from-cyan-400 hover:to-purple-500 font-bold transition-all duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-cyan-400 focus:ring-opacity-50 text-sm no-underline"
          >
            {primaryAction}
          </a>
        )
      }
      {
        secondaryAction && (
          <a
            href={secondaryHref}
            class="inline-flex items-center justify-center h-11 rounded-md px-8 border-2 border-cyan-400 text-cyan-400 bg-transparent hover:bg-cyan-400 hover:text-slate-900 font-bold transition-all duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-cyan-400 focus:ring-opacity-50 text-sm no-underline"
          >
            {secondaryAction}
          </a>
        )
      }
    </div>
  </div>
</section>
