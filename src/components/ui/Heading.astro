---
import { cn } from "@/lib/utils"
import type { HTMLAttributes } from 'astro/types'

export interface Props extends HTMLAttributes<'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6'> {
  level?: 1 | 2 | 3 | 4 | 5 | 6
  variant?: 'default' | 'hero' | 'section' | 'subsection'
  align?: 'left' | 'center' | 'right'
  class?: string
}

const { 
  level = 2,
  variant = 'default',
  align = 'left',
  class: className = '',
  ...props 
} = Astro.props

const headingVariants = {
  default: "font-orbitron font-bold text-white",
  hero: "font-orbitron font-black text-holographic",
  section: "font-orbitron font-bold text-holographic",
  subsection: "font-orbitron font-bold text-white"
}

const sizeVariants = {
  1: "text-6xl md:text-8xl",
  2: "text-4xl md:text-5xl", 
  3: "text-3xl md:text-4xl",
  4: "text-2xl md:text-3xl",
  5: "text-xl md:text-2xl",
  6: "text-lg md:text-xl"
}

const alignVariants = {
  left: "text-left",
  center: "text-center", 
  right: "text-right"
}

const classes = cn(
  headingVariants[variant],
  sizeVariants[level],
  alignVariants[align],
  className
)

const Tag = `h${level}` as const
---

<Tag class={classes} {...props}>
  <slot />
</Tag>
