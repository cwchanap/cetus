---
import { cn } from "@/lib/utils"
import type { HTMLAttributes } from 'astro/types'

export interface Props extends HTMLAttributes<'div'> {
  class?: string
}

const { 
  class: className = '',
  ...props 
} = Astro.props

const classes = cn(
  "max-w-6xl mx-auto",
  className
)
---

<div class={classes} {...props}>
  <slot />
</div>
